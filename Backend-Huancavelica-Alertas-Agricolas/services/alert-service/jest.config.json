{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": "(test|src)/.*\\.spec\\.(ts|js)$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "test/**/*.(t|j)s"
  ],
  "coverageDirectory": "coverage",
  "testEnvironment": "node"
}
