{
  "name": "alert-service",
  "version": "1.0.0",
  "description": "Alert Service (Orchestrator) for Agro-Alertas",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build && node -e \"const fs=require('fs'); if(!fs.existsSync('dist/main.js') && fs.existsSync('src/main.js')) { fs.mkdirSync('dist', { recursive: true }); fs.cpSync('src','dist',{ recursive: true }); }\"",
    "m:migrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./src/data-source.ts ./src/migrations/${name}",
    "m:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config jest.config.json",
    "test:unit": "jest --config jest.config.json --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "prom-client": "^15.0.0",
    "@nestjs/graphql": "^11.0.6",
    "@nestjs/apollo": "^11.0.0",
    "@apollo/server": "^4.10.0",
    "graphql": "^16.12.0",
    "agro-alertas-microservices": "file:../../..",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.18.3",
    "@prisma/client": "5.22.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/winston": "^2.4.4",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  }
  ,
  "optionalDependencies": {
    "@as-integrations/express5": "^1.0.0"
  }
}
