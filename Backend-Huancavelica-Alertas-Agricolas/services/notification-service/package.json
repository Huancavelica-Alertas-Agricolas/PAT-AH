{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification Service for Agro-Alertas",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config jest.config.json",
    "test:unit": "jest --config jest.config.json --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --config jest.config.json --coverage"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/graphql": "^11.0.6",
    "@nestjs/apollo": "^11.0.0",
    "@apollo/server": "^4.10.0",
    "graphql": "^16.12.0",
    "@nestjs/microservices": "^11.1.6",
    "@prisma/client": "5.22.0",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^7.0.1",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "agro-alertas-microservices": "file:../../..",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "jest": "^30.2.0",
    "nodemailer": "^7.0.6",
    "prom-client": "^14.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.4.5",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.7",
    "@types/node": "^22.10.7",
    "@types/winston": "^2.4.4",
    "typescript": "4.9.5"
  },
  "ts-jest": "^29.1.0",
  "@types/jest": "^29.5.2"
}
